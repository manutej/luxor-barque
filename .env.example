# BARQUE Microservice Environment Variables
# Copy this file to .env and fill in your values
# WARNING: Never commit .env file!

# Email Provider (resend or smtp)
EMAIL_PROVIDER=resend

# Resend API Configuration
RESEND_API_KEY=re_xxxxxxxxxxxxx

# Default Sender
POP_FROM=reports@company.com

# SMTP Configuration (alternative to Resend)
# POP_SMTP_HOST=smtp.gmail.com
# POP_SMTP_PORT=587
# POP_SMTP_USERNAME=your-email@gmail.com
# POP_SMTP_PASSWORD=your-app-password

# Application Settings
LOG_LEVEL=INFO
WORKERS=4
